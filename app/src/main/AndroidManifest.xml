<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kadi.countryinfo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/monde"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Authentification"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllCountries"
            android:label="@string/title_activity_all_countries"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OneCountryInfo"
            android:label="@string/title_activity_one_country_info"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".CountryInfoService" />

        <activity
            android:name=".ListOfCountries"
            android:label="@string/title_activity_list_of_countries"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
